{
  "manifest_version": 2,

  "name": "Plex Web Remote",
  "description": "Remotely control your tracks and playlist anywhere from your computer",
  "version_name": "Beta",
  "version": "0.1.0",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": {
    "128": "img/icon.png"
  },
  "browser_action": {
    "default_icon": "img/icon.png"
  },
  "author": "Maxime Lafarie maxime.lafarie@gmail.com",
  "homepage_url": "https://maximelafarie.com",
  "minimum_chrome_version": "46",
  "short_name": "PMS Web Remote",
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],
  "commands": {
    "prev" : {
      "suggested_key": {
        "default": "MediaPrevTrack"
      },
      "description": "Previous track",
      "global": true
    },
    "next": {
      "suggested_key": {
        "default": "MediaNextTrack"
      },
      "description": "Next track",
      "global": true
    },
    "playPause": {
      "suggested_key": {
        "default": "MediaPlayPause"
      },
      "description": "Start or pause track",
      "global": true
    },
    "stop": {
      "suggested_key": {
        "default": "MediaStop"
      },
      "description": "Stop currently played track",
      "global": true
    }
  },
  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },
  "permissions": [
    "storage",
    "tabs",
    "<all_urls>"
  ]
}